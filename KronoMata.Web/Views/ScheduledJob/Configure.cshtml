@model KronoMata.Web.Models.ConfigureScheduledJobViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.ScheduledJob.Name Configuration</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <form action="" method="post" class="scheduledjob-form">
                                <input type="hidden" name="scheduledjob-id" value="@Model.ScheduledJob.Id" />

                                @for (int x = 0; x < Model.ConfigurationValues.Count; x++)
                                {
                                    var pluginConfiguration = Model.PluginConfigurations[x];
                                    var configurationValue = Model.ConfigurationValues[x];

                                    @await Component.InvokeAsync("JobConfig", new { configurationValue = configurationValue })
                                }
                            </form>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    @if (Model.ScheduledJob.Id > 0)
                    {
                        <input type="button" onclick="" class="btn btn-secondary" value="Save" />
                    }
                    <input type="button" onclick="history.back();" class="btn btn-secondary" value="Cancel" />
                </div>
            </div>
        </div>
    </div>
</div>