{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "KronoMata.Web": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "KronoMata": "Information"
      },
      "FormatterName": "Simple",
      "FormatterOptions": {
        "IncludeScopes": true,
        "SingleLine": true,
        "TimestampFormat": "HH:mm:ss "
      }
    }
  },
  "Urls": "http://0.0.0.0:5002",
  "AllowedHosts": "*",
  "KronoMata": {
    "SQLite": {
      "DatabaseRootPath": "Database",
      "DatabaseFileName": "KronoMata.db",
      "DatabaseOptions": "Pooling=True;Cache Size=4000;Page Size=1024;FailIfMissing=True;Journal Mode=Off;"
    },
    "PackageRoot": "PackageRoot"
  }
}
